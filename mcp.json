{
  "name": "lux-mcp",
  "description": "Advanced reasoning tools with chain-of-thought monitoring and bias detection",
  "version": "0.1.0",
  "command": "./target/release/lux-mcp",
  "env": {
    "RUST_LOG": "info",
    
    "// API Keys - Required (at least one)": "",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
    
    "// Model Roles - Configure default models for each function": "",
    "LUX_DEFAULT_CHAT_MODEL": "gpt4.1",
    "LUX_DEFAULT_REASONING_MODEL": "o3",
    "LUX_DEFAULT_BIAS_CHECKER_MODEL": "o4-mini",
    
    "// Optional Configuration": "",
    "LUX_REQUEST_TIMEOUT_SECS": "30",
    "LUX_MAX_RETRIES": "3",
    "OPENAI_BASE_URL": "",
    "OPENROUTER_BASE_URL": "https://openrouter.ai/api/v1"
  },
  "tools": [
    {
      "name": "lux:chat",
      "description": "Simple chat with external LLM models",
      "parameters": {
        "message": "string",
        "model": "string (optional)",
        "temperature": "number (optional)",
        "max_tokens": "number (optional)"
      }
    },
    {
      "name": "traced_reasoning",
      "description": "Advanced chain-of-thought reasoning with multi-metric monitoring and real-time interventions",
      "parameters": {
        "query": "string",
        "model": "string (optional)",
        "max_steps": "number (optional)",
        "temperature": "number (optional)",
        "guardrails": "object (optional)"
      }
    },
    {
      "name": "biased_reasoning",
      "description": "Dual-model reasoning with step-by-step bias verification and correction",
      "parameters": {
        "query": "string",
        "primary_model": "string (optional)",
        "verifier_model": "string (optional)",
        "max_steps": "number (optional)",
        "temperature": "number (optional)",
        "bias_config": "object (optional)"
      }
    }
  ],
  "model_aliases": {
    "// OpenAI Models": "",
    "o3": "o3",
    "o3-pro": "o3-pro",
    "o4-mini": "o4-mini",
    "mini": "o4-mini",
    "gpt4.1": "gpt-4-turbo-preview",
    "gpt-4.1": "gpt-4-turbo-preview",
    
    "// OpenRouter Models (require OPENROUTER_API_KEY)": "",
    "claude": "anthropic/claude-3-opus",
    "opus": "anthropic/claude-3-opus",
    "sonnet": "anthropic/claude-3-sonnet",
    "haiku": "anthropic/claude-3-haiku",
    "gemini": "google/gemini-2.5-pro",
    "flash": "google/gemini-2.5-flash",
    "llama3": "meta-llama/llama-3-70b-instruct",
    "mixtral": "mistralai/mixtral-8x7b-instruct",
    "deepseek": "deepseek/deepseek-coder"
  },
  "requirements": {
    "api_keys": "At least one of OPENAI_API_KEY or OPENROUTER_API_KEY must be set",
    "rust": "Rust toolchain required for building from source",
    "build": "Run 'cargo build --release' before first use"
  }
}